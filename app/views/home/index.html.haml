.homeWrap

  = image_tag 'hiview.png', :class => "gem"

  %span.gam For Users

  = link_to 'Sign Up', new_user_registration_url, class: "gam"

  = link_to 'Sign In', new_user_session_url, class: "gam"

  %span.gam For Hospitals
  = link_to 'Sign In', new_hospital_session_url, class: "gam"

:css
  .homeWrap{
    margin-top: 20%;
    display: flex;
    flex-direction: column;
  }
  .gam{
    text-align: center;
    margin-top: 10px;
  }

  img{
    margin: auto;
    hight: 350px;
    width: 350px;
  }

  h1{
    color: lightgreen;
    font-family: fantasy;
    font-size: 20vw;
  }

  span{
    font-size: 7vw;
    color: darkgreen;
  }

  a{
    font-size: 5vw;
  }
