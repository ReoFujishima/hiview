%h1 Listing statuses

%table
  %thead
    %tr
      %th Value
      %th Hospital
      %th User
      %th
      %th
      %th

  %tbody
    - @statuses.each do |status|
      %tr
        %td= status.value
        %td= status.hospital_id
        %td= status.user_id
        %td= link_to 'Show', status
        %td= link_to 'Edit', edit_status_path(status)
        %td= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' }

%br

