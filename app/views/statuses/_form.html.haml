= form_for @status do |f|
  - if @status.errors.any?
    #error_explanation
      %h2= "#{pluralize(@status.errors.count, "error")} prohibited this status from being saved:"
      %ul
        - @status.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :value, 'Positive or negative?'
    = f.text_field :value
  .field
    = f.label :hospital_id
    = f.text_area :hospital_id
  .field
    = f.label :user_id, 'User_id'
    = f.text_area :user_id

  .actions
    = f.submit 'Save'

-if @status
  %p= @status.hospital_id
