= form_for @status do |f|
  - if @status.errors.any?
    #error_explanation
      %h2= "#{pluralize(@status.errors.count, "error")} prohibited this status from being saved:"
      %ul
        - @status.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :value, 'positive or negative?'
    = f.text_field :value, class: 'form-control'

  / .form-group
  /   = f.label :value, 'Positive or negative?'
  /   = f.select_field :value, class: 'form-control'
  /     %option 'positive'
  /     %option 'negative'

  .form-group
    = f.label :hospital_id, 'Hospital ID'
    = f.text_field :hospital_id, value: "1", class: 'form-control', readonly: true

  .form-group
    = f.label :user_id, 'User ID'
    = f.text_field :user_id, class: 'form-control'

  .form-group
    = f.submit 'Save', class: "btn btn_normal btn-lg active"
